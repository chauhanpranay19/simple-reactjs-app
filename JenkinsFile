pipeline {
    agent any
    environment {
        // Set Node.js version or other environment variables if necessary
        NODE_HOME = tool name: 'NodeJS 14', type: 'NodeJS'
        PATH = "${NODE_HOME}/bin:${env.PATH}"
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout your GitHub repository
                git url: 'https://github.com/chauhanpranay19/simple-reactjs-app.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install Node.js dependencies
                bat 'npm install'
            }
        }

        stage('Build') {
            steps {
                // Build the React.js project
                bat 'npm run build'
            }
        }

        stage('Test') {
            steps {
                // Run tests if applicable
                bat 'npm test'
            }
        }

        stage('Deploy') {
            steps {
                // You can define deployment steps here (e.g., copying files, starting server, etc.)
                // Example: Copy build files to a specific deployment directory
                bat 'xcopy /s /i build C:\\path\\to\\deployment\\directory'
            }
        }
    }
    post {
        success {
            echo 'Build completed successfully!'
        }
        failure {
            echo 'Build failed. Please check the logs.'
        }
    }
}

